{{!-- placeholder  --}}
<div class="flex-20">
</div>

{{!-- main --}}
<div class="flex-60">
  <div layout="row">
    {{#paper-card as |card|}}
          {{#card.title as |title|}}
            {{#title.text as |text|}}
              {{#text.headline}}Keinen Zutritt{{/text.headline}}                 
            {{/title.text}}
          {{/card.title}}
          {{#card.content}}
            {{#each model.errors as |error|}} 
              <p>Fehlermeldung {{error.status}}</p>
              <code>{{error.title}}</code>                  
            {{/each}}
          {{/card.content}}
    {{/paper-card}}
  </div>
</div>