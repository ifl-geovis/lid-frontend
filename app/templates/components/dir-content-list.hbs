{{#paper-card as |card|}}

    <h1 class="centered padding-top">{{contentType}} Liste</h1>
    <div class="centered">
    {{#paper-button raised=true primary=true}}
      Erstelle eine neue Region/Thema/Exkursion
    {{/paper-button}}
    </div>

	{{#card.content}}

	    {{!-- Bestehende BÃ¤nde --}}
	    <div class="list-content">
	    {{#each model  as |m|}}

	      	<h4 class="regionchunk">
	      	{{#link-to editURL m.id }}
	        	<strong>{{ m.name }}</strong>
	        {{/link-to}}
	    	</h4>
			<p class="edit-date">Aktualisiert am <span>{{m.modTime}}</span></p>
	    {{/each}}
			</div>
	{{/card.content}}

{{/paper-card}}
