{{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}Content{{/text.headline}}   
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
        {{content-editor-toolbar}} 
        {{trix-editor class="trix-editor-wrapper"
                  editorClass="trix-editor"
                  value=model.content
                  trix-change=(action "handleTrixAction") }}                 
      {{/card.content}}
{{/paper-card}}


