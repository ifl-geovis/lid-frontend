{{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.subhead}}{{model.id}}{{/text.subhead}}   
          {{#text.headline}}Content{{/text.headline}}
        {{/title.text}}
      {{/card.title}}
      {{#card.content}}
        {{#if topic}}
          {{content-editor-toolbar model=model topic=true}}
            {{trix-editor class="trix-editor-wrapper"
                    editorClass="trix-editor"
                    value=model.content
                    trix-change=(action "handleTrixAction" model) }}
        {{else if excursion}}
          {{content-editor-toolbar model=model excursion=true}}
            {{trix-editor class="trix-editor-wrapper"
                    editorClass="trix-editor"
                    value=model.content
                    trix-change=(action "handleTrixAction" model) }}
        {{else if region}}
          {{content-editor-toolbar model=model region=true}}
            {{trix-editor class="trix-editor-wrapper"
                    editorClass="trix-editor"
                    value=model.content
                    trix-change=(action "handleTrixAction" model) }}
        {{else}}
          {{content-editor-toolbar model=model}}
          {{trix-editor class="trix-editor-wrapper"
                  editorClass="trix-editor"
                  value=model.content
                  trix-change=(action "handleTrixAction" model) }}
        {{/if}}                
      {{/card.content}}
{{/paper-card}}
