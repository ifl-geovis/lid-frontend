{{#paper-dialog fullscreen=fullscreen onClose=(action "closeCreateTopicDialog") origin=dialogOrigin clickOutsideToClose=true}}

	{{#paper-toolbar}}
	<div class="md-toolbar-tools">
	  <h2>Neues Thema</h2>
	  <span class="flex"></span>
	  {{#paper-button iconButton=true onClick=(action "closeCreateTopicDialog")}}{{paper-icon icon="close"}}{{/paper-button}}
	</div>
	{{/paper-toolbar}}

	{{#paper-dialog-content}}
	<h5>Metadaten</h5>
	<div layout="row">
	  {{paper-input flex=100 value=model.id label="Id" required="true" required-errortext="Wichtig!" onChange=(action (mut model.id ))}}
	</div>
	<div layout="row">
	  {{paper-input flex=100 value=model.title label="Titel" onChange=(action (mut model.title))}}
	</div>
	{{/paper-dialog-content}}

	{{#paper-dialog-actions class="layout-row"}}
	<span class="flex"></span>
	{{#paper-button primary=true onClick=(action "closeCreateTopicDialog")}}Abbrechen{{/paper-button}}
	{{#paper-button primary=true onClick=(action "createTopicAction" )}}Thema erstellen{{/paper-button}}
	{{/paper-dialog-actions}}

{{/paper-dialog}}

