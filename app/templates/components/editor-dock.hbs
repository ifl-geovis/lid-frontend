{{!-- Editor dock --}}
<div class="flex-20">
  <div class="editor-dock">
    {{#paper-button primary=true fab=true onClick=(action "openPromptDialog")}}P{{/paper-button}} 
    <br>
    {{#paper-button fab=true onClick=(action "openPromptDialog")}}C{{/paper-button}}
    <br>
    {{#if createRegion}}
    	{{#paper-button accent=true raised=true onClick=(action "openPromptDialog")}}Neuen Band erstellen{{/paper-button}}
    	<br>  
    {{/if}} 
	
    {{#if createTopic}}
    	{{#paper-button accent=true raised=true onClick=(action "openPromptDialog")}}Neues Thema erstellen{{/paper-button}}   
    	<br>
    {{/if}}  
	
    {{#if createExcursion}}
    	{{#paper-button accent=true raised=true onClick=(action "openPromptDialog")}}Neue Exkursion erstellen{{/paper-button}}   
    {{/if}}  
    
  </div>  
    
  {{!-- Band erstellen Dialog --}}
  {{#if showPromptDialog}}
    {{#paper-dialog fullscreen=fullscreen onClose=(action "closePromptDialog" "cancel") origin=dialogOrigin clickOutsideToClose=true}}

      {{#paper-toolbar}}
        <div class="md-toolbar-tools">
          <h2>Neuer Band</h2>
          <span class="flex"></span>
          {{#paper-button iconButton=true onClick=(action "closePromptDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
        </div>
      {{/paper-toolbar}}

      {{#paper-dialog-content}}
        <h5>Metadaten</h5>
        <div layout="row">
          {{paper-input flex=100 value=region.id label="Bandnummer" required="true" required-errortext="Wichtig!" onChange=(action (mut region.id ))}}  
        </div>
        <div layout="row">
          {{paper-input flex=100 value=region.title label="Titel" onChange=(action (mut region.title))}}  
        </div>        
      {{/paper-dialog-content}}

      {{#paper-dialog-actions class="layout-row"}}
        <span class="flex"></span>
        {{#paper-button primary=true onClick=(action "closePromptDialog" "cancel")}}Abbrechen{{/paper-button}}
        {{#paper-button primary=true onClick=(action "saveRegion" )}}Band erstellen{{/paper-button}}
      {{/paper-dialog-actions}}

    {{/paper-dialog}}
  {{/if}}
</div>