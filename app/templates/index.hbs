<div class="layout-row layout-align-center-center">  

  {{!-- Neuer Band --}}
  {{#paper-button raised=true onClick=(action "openPromptDialog")}}Neuen Band erstellen{{/paper-button}}

  {{#if showPromptDialog}}
    {{#paper-dialog fullscreen=fullscreen onClose=(action "closePromptDialog" "cancel") origin=dialogOrigin clickOutsideToClose=true}}
      
      {{#paper-toolbar}}
        <div class="md-toolbar-tools">
          <h2>Neuer Band</h2>
          <span class="flex"></span>
          {{#paper-button iconButton=true onClick=(action "closePromptDialog" "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
        </div>
      {{/paper-toolbar}}

      {{#paper-dialog-content}}
        <h5>Metadaten</h5>
        {{paper-input flex=100 label="Bandnummer" value=id required="true" required-errortext="Wichtig!" onChange=null}}
        {{paper-input flex=100 label="Titel" value=title onChange=(action (mut name))}}
      {{/paper-dialog-content}}

      {{#paper-dialog-actions class="layout-row"}}
        <span class="flex"></span>
        {{#paper-button primary=true onClick=(action "closePromptDialog" "cancel")}}Abbrechen{{/paper-button}}
        {{#paper-button primary=true onClick=(action "closePromptDialog" "ok" newModel)}}Band erstellen{{/paper-button}}
      {{/paper-dialog-actions}}

    {{/paper-dialog}}
  {{/if}}

</div>  

<div class="layout-row layout-wrap">   

  {{!-- Bestehende BÃ¤nde --}}
  {{#each ( chunk 5 (reverse model) ) as |regionchunk|}}
    
    <div class="flex-50">
      
      {{#paper-card as |card|}}
        {{#card.content class="regionchunk"}}          
          {{#each regionchunk as |region|}}
            {{#link-to 'region.edit' region.fileName }} 
             <strong>{{ region.id }}</strong> {{ region.name }}  
            {{/link-to}}          
          {{/each}}        
        {{/card.content}}
      {{/paper-card}}
    
    </div>       
  {{/each}}


    
</div>     

